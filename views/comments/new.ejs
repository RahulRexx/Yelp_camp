<%- include('../partials/header.ejs') %>

<div class="container">
    <div>
        <div>
            <h1 style="text-align: center;">Add a Comment at <%= campgrounds.name %></h1>
        </div>

        <div style="width:35% ; margin: 15px auto;">

            <form action="/campgrounds/<%=campgrounds._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" autofocus autocomplete="off">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>
            <hr>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


</div>



<%- include('../partials/footer.ejs') %>